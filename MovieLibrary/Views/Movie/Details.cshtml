@model Movie
@{
    ViewData["Title"] = "Detalle de Película";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.PosterPath" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h2 class="movie-title">@Model.Title</h2>
            <p class="overview">@Model.Overview</p>
            <p><strong>Fecha de estreno:</strong> @Model.ReleaseDate</p>
            <p><strong>Géneros:</strong> @string.Join(", ", Model.GenreIds)</p>
            <a href="@Url.Action("Index", "Movie")" class="btn btn-primary mt-3">Volver</a>
        </div>
    </div>
</div>
